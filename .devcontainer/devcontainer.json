{
	"name": "Python 3",
	"image": "mcr.microsoft.com/devcontainers/python:1-3-bookworm",
	"features": {
		"ghcr.io/devcontainers-extra/features/flake8:latest": {},
		"ghcr.io/devcontainers-extra/features/mypy:latest": {},
		"ghcr.io/devcontainers-extra/features/pylint:latest": {}
	},
	"postCreateCommand": "pip3 install --user -r requirements.txt",
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"streetsidesoftware.code-spell-checker-russian",
				"SonarSource.sonarlint-vscode"
			]
		}
	}
}